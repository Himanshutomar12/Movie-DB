<%- include("partials/header") %>
<div class="content">
  <h1><strong>Search movies!</strong></h1>
  <form class="form-inline" action="/" method="post">

   <div class="row g-3 align-items-center searchButton">

  <div class="col-auto">
    <input type="text" class="form-control" placeholder="Search for movie" name="movieName" autocomplete="off">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-success" name="button">Search</button>
  </div>
</div>

  </form>




<!-- carousel -->

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-interval="5000">
    <div class="carousel-inner images">
      <div class="carousel-item active">
        <img src="images/avengers.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="images/conjuring.png" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="images/it.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="images/kong.jpg" class="d-block w-100" alt="...">
      </div>




    </div>
    <button class="carousel-control-prev span1" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next span2" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>



</div>



<%- include("partials/footer") %>
